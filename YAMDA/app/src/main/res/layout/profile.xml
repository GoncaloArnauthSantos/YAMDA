<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="370dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:keyboardNavigationCluster="false"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.joao.yamda.view.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/header"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/profileTitle"
            android:textColor="@color/headerTxt"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/a40599" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile1Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="40599"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gonçalo Santos"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/git1"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="34dp"
                android:layout_height="45dp"
                android:layout_weight="0.02"
                android:src="@drawable/github" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/profile2"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0.98"
                android:src="@drawable/a41510" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile2Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="41510"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="João Leitão"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/git2"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="28dp"
                android:layout_height="39dp"
                android:layout_weight="0.10"
                android:src="@drawable/github" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile3"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/a40677" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile3Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="40677"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ricardo Moreira"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/git3"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="34dp"
                android:layout_height="46dp"
                android:layout_weight="0.02"
                android:src="@drawable/github" />
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/apiLogo"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/headerTxt"
        android:src="@drawable/logo2" />

</LinearLayout>
